echo 
echo "Upgrading wireless drivers..."
echo

#
# Rationale: 
# as of writing, linux-backports-modules-wireless-lucid-generic brings in linux-backports-modules-compat-wireless-2.6.34-2.6.xx-yy-generic
# while we want the more updated linux-backports-modules-compat-wireless-2.6.35-2.6.xx-yy-generic
#
# This script can be removed when the more updated package will be fetched automatically
#

kernelVersion=$(ls /lib/modules)

apt-get -y install "linux-backports-modules-compat-wireless-2.6.35-$kernelVersion"

exit
